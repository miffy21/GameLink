<main role="main">
	<div class="py-5 bg-light">
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<div class="mb-12 shadow-sm">
						<%= image_tag @content.image_url.to_s, :style =>"width:100%;height:500px;object-fit:contain;" %>
						<title><%= @content.name %></title><rect fill="#55595c" width="100%" height="100%" />
						<div class="content-body">
							<h4 class="content-title"><%= @content.name %></h4>
							<h3 class="content-main-text"><%= @content.main_content %></h3>
							<%= image_tag @content.image2_url.to_s, :style =>"width:100%;height:500px;object-fit:contain;" %>
							<div class="content-sub-text"><%= @content.sub_content %></div>
							<%= image_tag @content.image3_url.to_s, :style =>"width:100%;height:500px;object-fit:contain;" %>
							<%= image_tag @content.image4_url.to_s, :style =>"width:100%;height:500px;object-fit:contain;" %>
							<%= image_tag @content.image5_url.to_s, :style =>"width:100%;height:500px;object-fit:contain;" %>
							<div class="d-flex justify-content-between align-items-center">記事が面白かったら『いいね！』お願いします！→<%= render 'favorites/favoriteform',content: @content %>
								<small class="text-muted">
									<%= @content.genre.name %>
								</small>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="row" style="height: 20px;">
			</div>
		</div>
		<%= render 'comments/commentsform',content: @content %>
		<% if user_signed_in? %>
		<%= form_for @comment do |f| %>
		<div class="row">
			<div class="col-sm-12">
				<%= f.hidden_field :content_id, :value => @content.id %>
				<%= f.text_area :comment, rows:'5', class: "form-control",placeholder: "この記事についてコメント書く" %>
			</div>
		</div>
		<%= f.submit "送信", class: "btn btn-primary pull-right" %>
		<% end %>
		<% else %>
		<p class="">新規登録するとコメント機能が使えます！</p>
		<p>今すぐ
			<%= link_to new_user_registration_path do %>
			<button type="button" class="btn btn-sm btn-outline-secondary">新規登録</button>
			<% end %>
		</p>
		<p>登録済みの方は<%= link_to new_user_session_path do %>
			<button type="button" class="btn btn-sm btn-outline-secondary">ログイン</button>
			<% end %></p>
			<% end %>
		</div>
	</main>

