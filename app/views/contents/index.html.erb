<main role="main">
    <div class="album py-5 bg-light">
      <div class="container">
        <div class="row">
        <% @contents.each do |content| %>
          <div class="col-md-12">
            <div class="card mb-4 shadow-sm">
              <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice"><title><%= content.name %></title><rect fill="#55595c" width="100%" height="100%" /><text fill="#eceeef" dy=".3em" x="50%" y="50%">サムネイル</text></svg>
              <div class="card-body">
                <p class="card-text"><%= content.name %></p>
                <div class="d-flex justify-content-between align-items-center">
                  <div class="btn-group">
                    <button type="button" class="btn btn-sm btn-outline-secondary">見る</button>
                  </div>
                  <small class="text-muted"><%= content.genre.name %></small>
                </div>
              </div>
            </div>
          </div>
        <% end %>
        </div>
      </div>
    </div>
  </main>
