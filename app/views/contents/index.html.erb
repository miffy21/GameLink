<main role="main">
    <div class="album py-5 bg-light">
      <div class="container">
        <div class="row">
        <% @contents.each do |content| %>
          <div class="col-md-12">
            <div class="card mb-4 shadow-sm">
              <%= image_tag content.image_url.to_s, :style =>"width:100%;height:300px;object-fit:contain;" %>
              <title><%= content.name %></title><rect fill="#55595c" width="100%" height="100%" />
              <div class="card-body">
                <h4 class="card-text"><%= content.name %></h4>
                <div class="d-flex justify-content-between align-items-center">
                  <div class="btn-group">
                    <%= link_to content_path(content) do %>
                    <button type="button" class="btn btn-sm btn-outline-secondary">見る</button>
                  </div>
                  <small class="text-muted"><%= content.genre.name %></small>
                </div>
              </div>
            </div>
          </div>
          <% end %>
        <% end %>
        </div>
      </div>
    </div>
  </main>