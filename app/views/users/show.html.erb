<div class="container">
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <div class="panel panel-primary">
                <div class="panel-heading" style="text-align: center;">
                    <b>プロフィール</b>
                </div>
                <table class="table table-bordered table-content">
                    <tbody>
                        <tr>
                            <th class="info">名前</th>
                            <td>
                                <%= "#{@user.name}" %><%= render 'users/follow_form', user: @user %>
                            </td>
                        </tr>
                        <tr>
                            <th class="info">ID</th>
                            <td>
                                <%= "#{@user.nickname}" %>
                            </td>
                        </tr>
                        <tr>
                            <th class="info">イメージ画像</th>
                            <td>
                                <%= attachment_image_tag @user, :profile_image, :fill, 300,300,fallback: "no_image.jpg",size:'300x300'%>
                            </td>
                        </tr>
                        <tr>
                            <th class="info">好きなジャンル</th>
                            <td>
                                <%= "#{@user.favorite_genre}" %>
                            </td>
                        </tr>
                        <tr>
                            <th class="info">好きなタイトル</th>
                            <td>
                                <%= "#{@user.being_played}" %>
                            </td>
                        </tr>
                        <tr>
                            <th class="info">自己紹介</th>
                            <td>
                                <%= "#{@user.profile}" %>
                            </td>
                        </tr>
                        <tr>
                            <th class="info">フォロー数</th>
                            <td>
                                <%= @user.following.count %>
                            </td>
                        </tr>
                        <tr>
                            <th class="info">フォロワー数</th>
                            <td>
                                <%= @user.followers.count %>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-8">
            <% if @user.id == current_user.id %>
            <table class="table table-bordered table-content">
                <tbody>
                    <tr>
                        <%= link_to "プロフィール編集", edit_user_path(@user), class: 'btn-lg btn-primary' %>
                    </tr>
                    <tr>
                        <%= link_to "パスワード変更", edit_registration_path(@user), class: 'btn-lg btn-primary' %>
                    </tr>
                </tbody>
            </table>
            <% end %>
        </div>
    </div>
</div>