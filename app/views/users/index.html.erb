<h2>会員一覧</h2>
<table class="table table-hover">
	<% @users.each do |user| %>
	<tr>
		<th><div class="rounded-circle">
			<%= attachment_image_tag user, :profile_image, :fill, 140,140, fallback: "no_image.jpg", size:'140x140'%></div>
		</th>
		<th>
			<h3 class="mb-0">
					<a class="text-primary"><%= link_to "#{user.name}",user_path(user.id)%></a>
				</h3>
				<div class="mb-1 text-muted"><%= user.nickname %></div>
				<p><%= user.profile %></p>
		</th>
		<th>
			<p>好きなジャンル</p>
            <p><%= user.favorite_genre %></p>
            <p>好きなタイトル</p>
            <p><%= user.being_played %></p>
		</th>
		<th>
			<p>フォロー</p>
			<p>  <a href="<%= following_user_path(user.id) %>">
				<strong id="following" class="stat">
					<%= user.following.count %>
				</strong></a></p>
			<p>フォロワー</p>
			<p> <a href="<%= followers_user_path(user.id) %>">
				<strong id="followers" class="stat">
					<%= user.followers.count %>
				</strong></a></p>
		</th>
		<th>
			<% unless current_user?(user) %>
			<div id="follow_form">
				<% if current_user.following?(user) %>
					<%= form_for(current_user.active_relationships.find_by(followed_id: user.id),
					html: { method: :delete },) do |f| %>
					<%= f.submit "フォロー中", class: "btn btn-primary", "data-confirm" => "フォローを解除しますか？" %>
					<% end %>
				<% else %>
					<%= form_for(current_user.active_relationships.build) do |f| %>
						<div><%= hidden_field_tag :followed_id, user.id %></div>
					<%= f.submit "フォローする", class: "btn btn-secondary" %>
					<% end %>
				<% end %>
			<% end %>
			</div>
		</th>
    </tr>
    <% end %>
</table>
