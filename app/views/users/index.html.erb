<div class="row">
		<h2>会員一覧</h2>
		<!--users一覧 -->
		<table class="table">
			<thead>
				<tr>
					<th>image</th>
					<th>name</th>
					<th colspan="3"></th>
				</tr>
			</thead>
			<tbody>
				<% @users.each do |user| %>
				<tr>
					<td><%= attachment_image_tag user, :profile_image, :fill, 100,100,format:'jpg'%></td>
					<td><%= user.name%></td>
					<td>フォロー数<%= user.following.count %></td>
					<td>フォロワー数<%= user.followers.count %></td>
					<td><% unless current_user?(user) %>
							<div id="follow_form">
								<% if current_user.following?(user) %>
									<%= form_for(current_user.active_relationships.find_by(followed_id: user.id),
									html: { method: :delete },) do |f| %>
										<%= f.submit "フォローを外す", class: "btn btn-danger" %>
									<% end %>
								<% else %>
									<%= form_for(current_user.active_relationships.build) do |f| %>
										<div><%= hidden_field_tag :followed_id, user.id %></div>
										<%= f.submit "フォローする", class: "btn btn-primary" %>
									<% end %>
								<% end %>
							</div>
						<% end %></td>
						<td><%= link_to "Show", user, class: "user_#{user.id}" %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>
