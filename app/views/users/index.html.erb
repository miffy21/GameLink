<h2>会員一覧</h2>
<table class="table table-hover">
	<% @users.each do |user| %>
	<tr>
		<th><div class="rounded-circle">
			<%= attachment_image_tag user, :profile_image, :fill, 140,140, fallback: "no_image.jpg", size:'140x140',id: "profile-image"%></div>
		</th>
		<th>
			<h3 class="mb-0">
					<a class="text-primary"><%= link_to "#{user.name}",user_path(user.id)%></a>
				</h3>
				<div class="mb-1 text-muted"><%= user.nickname %></div>
				<p><%= user.profile %></p>
		</th>
		<th>
			<p>好きなジャンル</p>
            <p><%= user.favorite_genre %></p>
            <p>好きなタイトル</p>
            <p><%= user.being_played %></p>
		</th>
		<th>
			<p>フォロー</p>
			<p>  <a href="<%= following_user_path(user.id) %>">
				<strong id="following" class="stat">
					<%= user.following.count %>
				</strong></a></p>
			<p>フォロワー</p>
			<p> <a href="<%= followers_user_path(user.id) %>">
				<strong id="followers" class="stat">
					<%= user.followers.count %>
				</strong></a></p>
		</th>
		<th>
            <%= render 'users/follow_form', user: user %>
		</th>
    </tr>
    <% end %>
</table>
