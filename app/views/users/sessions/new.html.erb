<div class="container">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

   <% if @user.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <% end %>
    <div class="mt-5 row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <h3>会員の方はこちらからログイン</h3>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <table class="mt-5 table table-striped table-bordered table-hove">
                    <tr>
                        <div class="field">
                            <th>
                                <%= f.label :"メールアドレス" %>
                            </th>
                            <td>
                                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "text-field-small" %>
                            </td>
                        </div>
                    </tr>
                    <tr>
                        <div class="field">
                            <th>
                                <%= f.label :パスワード %>
                            </th>
                            <td>
                                <%= f.password_field :password, autocomplete: "current-password", class: "text-field-small" %>
                            </td>
                        </div>
                    </tr>
                </table>
            <%= link_to "⇒パスワードを忘れた方はこちら", new_password_path(resource_name) %>
            <div class="mt-5 actions" style="text-align: center;">
                <%= f.submit "ログイン", class: "btn btn-primary" %>
            </div>
            <% end %>
        </div>
        <div class="col-md-3"></div>
    </div>
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6" style="margin-top: 30px; text-align: center;">
            <p>登録がお済でない方は
            <%= link_to "新規登録", new_registration_path(resource_name) %>
            お願いします。</p>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>
