<% @comments.each do |comment| %>
<table class="table table-striped">
    <tr>
        <td><%= comment.user.nickname %></td>
        <td><%= attachment_image_tag comment.user, :profile_image, :fill, 30,30,format:'jpg'%></td>
        <td><%= comment.created_at.strftime('%Y/%m/%d/%H:%M') %></td>
        <td><%= comment.comment %></td>
        <td><% if comment.user_id == current_user.id %>
            <%= link_to "Destroy", comment_path(comment), class:"btn-sm btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？" %>
            <% end %>
        </td>
    </tr>
</table>
<% end %>