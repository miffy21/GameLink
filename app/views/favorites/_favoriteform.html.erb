<% if comment.favorited_by?(current_user) %>
<td><%= link_to favorite_path(comment), method: :delete do %>
	<i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
	<%= comment.favorites.count %> いいね
	<% end %>
</td>
<% else %>
<td>
	<%= link_to favorites_path(params: {user_id: current_user.id, comment_id: comment.id}), method: :post do %>
	<i class="fa fa-heart-o" aria-hidden="true"></i>
	<%= comment.favorites.count %> いいね
	<% end %>
</td>
<% end %>